---
/* Chat Panel UI Component (static for now) */
---

<div class="chat-panel">
  <div class="chat-header">Ask me anythingâ€¦</div>

  <div class="chat-messages">
    <!-- Initially empty -->
  </div>

  <div class="chat-input-row">
    <button class="icon-btn">
      <img src="/icons/add.png" alt="Add" />
    </button>

    <input class="chat-input" type="text" placeholder="Ask away" />

    <button class="icon-btn mic-btn">
      <img src="/icons/mic.png" alt="Microphone" class="mic-icon" />
      <img src="/icons/voicewave.png" alt="Listening" class="listening-icon" />
    </button>
  </div>
</div>

<style>
  .chat-panel {
    width: 420px;
    height: 600px;
    background: #ffffff;
    border-radius: 20px;
    border: 2px solid var(--brand-blue);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.06);
  }

  .chat-header {
    padding: 24px;
    font-size: 22px;
    font-weight: 600;
    color: var(--brand-blue);
    text-align: left;
  }

  .chat-messages {
    flex: 1;
    overflow-y: auto;
    padding: 16px;
  }

  /* Hide scrollbars */
  .chat-messages::-webkit-scrollbar {
    display: none;
  }
  .chat-messages {
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .chat-input-row {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    border-top: 1px solid #eee;
  }

  .icon-btn {
    width: 36px;
    height: 36px;
    background: transparent;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
  }

  .icon-btn img {
    width: 24px;
    height: 24px;
  }

  .chat-input {
    flex: 1;
    height: 40px;
    border-radius: 30px;
    border: 1px solid var(--brand-blue);
    padding: 0 16px;
    font-size: 15px;
    outline: none;
  }

  /* Mic modes */
  .mic-btn {
    position: relative;
  }

  .mic-icon {
    display: block;
  }

  .listening-icon {
    display: none;
  }

  .mic-btn.listening .mic-icon {
    display: none;
  }

  .mic-btn.listening .listening-icon {
    display: block;
  }

  @media (max-width: 900px) {
    .chat-panel {
      width: 100%;
      height: 480px;
    }
  }
</style>

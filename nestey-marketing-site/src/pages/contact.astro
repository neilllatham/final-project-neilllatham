---
import BaseLayout from "../layouts/BaseLayout.astro";
import NavBar from "../components/NavBar.astro";
---

<BaseLayout title="Contact — Nestey">
  <NavBar />

  <!-- HERO SECTION -->
  <section class="hero">
    <div class="container hero-inner">
      <div class="hero-content">
        <h1>We Believe Work Can Feel Better — Let's Start the Conversation</h1>
        <p class="hero-main">
          If you're curious about how Nestey can elevate your employees' experience, empower leaders, and simplify HR, we're here to help.
        </p>
        <p class="hero-sub">
          Reach out with any question — big or small — and we'll guide you the rest of the way.
        </p>

        <p class="closing-text">
          Let's create something remarkable for your people.
        </p>

        <div class="contact-info">
          <div class="contact-item">
            <a href="mailto:hello@nestey.co" class="btn">Email us: hello@nestey.co</a>
          </div>

          <div class="contact-item">
            <a href="mailto:support@nestey.co" class="btn">Support team: support@nestey.co</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FEATURE PREVIEW SECTION -->
  <section class="features">
    <div class="container">
      <h2 class="text-center mb-3">What Makes Nestey Different</h2>

      <div class="feature-grid">
        <div class="card">
          <h3>AI That Feels Like a Teammate</h3>
          <p>
            Your people don't dig through menus — they just talk.
            Nestey's conversational AI handles HR tasks instantly, from time off to benefits to performance.
          </p>
        </div>

        <div class="card">
          <h3>Time off that's hassle free, talk and book.</h3>
          <p>
            No spreadsheets. No back-and-forth emails.
            Requests, balances, approvals — Nestey keeps everything in sync without anyone lifting a finger.
          </p>
        </div>

        <div class="card">
          <h3>Goals & Growth Without the Overload</h3>
          <p>
            Powerful, flexible performance reviews that actually move people forward.
            Crystal-clear visibility, real-time feedback, and connected goals that push the whole company in one direction.
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* HERO */
  .hero {
    padding: 6rem 0;
    background: var(--brand-card-bg);
  }

  .hero-inner {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-content {
    max-width: 800px;
    text-align: left;
  }

  .hero-content h1 {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    color: var(--brand-blue);
    line-height: 1.3;
  }

  .hero-main {
    font-size: 1.5rem;
    line-height: 1.5;
    margin-bottom: 1rem;
    color: var(--text-dark);
    font-weight: 500;
  }

  .hero-sub {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--text-medium);
    margin-bottom: 2.5rem;
  }

  .hero-sub {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--text-medium);
    margin-bottom: 2.5rem;
  }

  .closing-text {
    font-size: 1.5rem;
    color: var(--brand-blue);
    line-height: 1.6;
    font-weight: 500;
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .contact-info {
    margin: 0;
    padding: 0;
    background: transparent;
    border-radius: 0;
    box-shadow: none;
    text-align: left;
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .contact-item {
    margin-bottom: 0;
    line-height: 1.6;
  }

  .contact-item:last-child {
    margin-bottom: 0;
  }

  .contact-item a {
    text-decoration: none;
  }

  .closing-text {
    font-size: 1.5rem;
    color: var(--brand-blue);
    line-height: 1.6;
    font-weight: 500;
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
  }

  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2rem;
    }

    .hero-main {
      font-size: 1.25rem;
    }

    .hero-sub {
      font-size: 1rem;
    }

    .contact-item {
      font-size: 1.1rem;
    }

    .closing-text {
      font-size: 1.25rem;
    }
  }

  /* FEATURES */
  .features {
    background: var(--brand-background);
    padding: 4rem 0 5rem;
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-top: 2rem;
  }

  .card h3 {
    margin-bottom: 0.75rem;
  }

  @media (max-width: 900px) {
    .feature-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

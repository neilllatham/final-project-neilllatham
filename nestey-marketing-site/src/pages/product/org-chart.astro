---
import BaseLayout from "../../layouts/BaseLayout.astro";
import NavBar from "../../components/NavBar.astro";
---

<BaseLayout title="Org Chart â€” Nestey Product">
  <NavBar />

  <section class="hero-section">
    <div class="container">
      <h1 class="main-heading">Yes, easier org charts... Instantly.</h1>

      <div class="org-chart-image">
        <img src="/icons/orgChart.png" alt="Organization Chart" />
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero-section {
    padding: 3rem 0 5rem;
    background: var(--brand-background);
  }

  .main-heading {
    font-size: 2.5rem;
    text-align: center;
    color: var(--brand-blue);
    max-width: 1100px;
    margin: 0 auto 4rem;
    line-height: 1.3;
    font-weight: 600;
  }

  .org-chart-image {
    margin-top: 72px;
    text-align: center;
  }

  .org-chart-image img {
    max-width: 90%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  @media (max-width: 768px) {
    .main-heading {
      font-size: 2rem;
      margin-bottom: 3rem;
    }

    .org-chart-image {
      margin-top: 144px;
    }
  }
</style>

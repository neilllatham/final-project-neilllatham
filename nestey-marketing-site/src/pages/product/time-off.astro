---
import BaseLayout from "../../layouts/BaseLayout.astro";
import NavBar from "../../components/NavBar.astro";
---

<BaseLayout title="Time Off â€” Nestey Product">
  <NavBar />

  <section class="hero-section">
    <div class="container">
      <h1 class="main-heading">
        Nestey makes time-off requests simple, automated and employee-friendly.
      </h1>

      <div class="content-layout">
        <img src="/icons/fullTimeOff.png" alt="Nestey Time Off Interface" class="full-timeoff-image" />
      </div>

      <h2 class="secondary-heading">
        If you want to keep things classic, go for it - Nestey supports every
        way you work.
      </h2>

      <div class="interface-image">
        <img src="/icons/timeoff-screenshot.png" alt="Time Off Interface" />
      </div>
    </div>
  </section>

  <style>
    .hero-section {
      padding: 3rem 0 5rem;
      background: var(--brand-background);
    }

    .main-heading {
      font-size: 2.5rem;
      text-align: center;
      color: var(--brand-blue);
      max-width: 1100px;
      margin: 0 auto 4rem;
      line-height: 1.3;
      font-weight: 600;
    }

    .secondary-heading {
      font-size: 2.5rem;
      text-align: center;
      color: var(--brand-blue);
      max-width: 1100px;
      margin: 144px auto 0;
      line-height: 1.3;
      font-weight: 600;
    }

    .interface-image {
      margin-top: 216px;
      text-align: center;
    }

    .interface-image img {
      max-width: 900px;
      width: 100%;
      height: auto;
      border-radius: var(--radius-md);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    }

    .content-layout {
      max-width: 1200px;
      margin: 0 auto;
      text-align: center;
    }

    .full-timeoff-image {
      width: 100%;
      height: auto;
      display: block;
      margin: 0 auto;
    }
  </style>
</BaseLayout>
